{
    "name": "soluble/mediatools",
    "description": "mediatools",
    "license": "MIT",
    "keywords": [
        "video",
        "transcode",
        "ffmpeg"
    ],
    "homepage": "https://github.com/soluble-io/soluble-mediatools",
    "type": "library",
    "authors": [
        {
            "name": "SÃ©bastien Vanvelthem",
            "homepage": "https://github.com/belgattitude"
        }
    ],
    "require": {
        "php": "^7.1",
        "psr/log": "^1.0",
        "psr/container": "^1.0"
    },
    "require-dev" : {
        "fig/http-message-util": "^1.1.2",
        "zendframework/zend-servicemanager": "^3.3",
        "friendsofphp/php-cs-fixer": "^2.11.1",
        "infection/infection": "^0.8.2",
        "mikey179/vfsStream": "^1.6",
        "monolog/monolog": "^1.23.0",
        "phpstan/phpstan-strict-rules": "^0.9.0",
        "phpstan/phpstan": "^0.9.2",
        "phpstan/phpstan-phpunit": "^0.9.3",
        "phpunit/phpunit": "^7.1",
        "roave/security-advisories": "dev-master",
        "guzzlehttp/guzzle": "^6.2.3",
        "psr/http-message": "^1.0.1",
        "slevomat/coding-standard": "^4.6.0",
        "squizlabs/php_codesniffer": "^3.2",
        "consistence/coding-standard": "^3.0.1"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Soluble\\MediaTools\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MediaToolsTest\\": [
                "tests/unit",
                "tests/functional",
                "tests/util",
                "tests/smoke"
            ]
        },
        "files": ["tests/TestsFactories.php"]
    },

    "scripts": {
        "check": [
            "@cs-check",
            "@phpstan",
            "@check-expressive-testapp"
        ],
        "fix": [
            "@cs-fix"
        ],
        "test": "vendor/bin/phpunit",
        "test:mutation": "vendor/bin/infection --configuration=infection.local.json --test-framework=phpunit --verbose --min-msi=85 --min-covered-msi=90 --threads=4",
        "cs-check": "vendor/bin/php-cs-fixer --diff --dry-run -v fix",
        "cs-fix": "vendor/bin/phpcbf; vendor/bin/php-cs-fixer -v fix",
        "phpstan": "vendor/bin/phpstan analyse -l max -c phpstan.neon src tests",
        "build-doc": "mkdocs build",
        "serve-doc": "mkdocs serve --dev-addr localhost:8094",
        "install-expressive-testapp": "composer update -d ./tests/server/expressive",
        "serve-expressive-testapp": "php -S localhost:7999 -t tests/server/expressive/public",
        "check-expressive-testapp": [
            "composer phpstan -d tests/server/expressive/"
        ]
    },
    "suggest": {
        "monolog/monolog": "PSR-3 compatible logger"
    },
    "archive": {
        "exclude": [".travis", "infection.json", ".sami.php", "phpstan.neon", "tests", "docs", ".travis", ".travis.yml", ".codeclimate.yml", ".coveralls.yml", ".scrutinizer.yml", ".php_cs", ".gitignore", "phpcs.xml"]
    }
}
